@model pgDesign.Models.Webshop

@{
    ViewBag.Title = "DeleteWebshopItem";
}



<h3 class="text-center">Är du säker att du vill ta bort denna vara?</h3>
<div>
    
    <hr />
    @using (Html.BeginForm("DeleteWebshop", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id);

        <dl class="dl-horizontal shadow-lg rounded col-md-8 center border" style="background-color: #333;">
            <dt class="text-center text-white">
                @Html.LabelFor(model => model.Name, new { @class = "mt-3" } )
            </dt>

            <dd class="text-center text-white">
                @Html.DisplayFor(model => model.Name)
                @Html.HiddenFor(model => model.Name)
            </dd>

            <dt class="text-center text-white">
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd class="text-center text-white">
                @Html.DisplayFor(model => model.Description)
                @Html.HiddenFor(model => model.Description)
            </dd>

            <dt class="text-center text-white">
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd class="text-center text-white">
                @Html.DisplayFor(model => model.Price)
                @Html.HiddenFor(model => model.Price)
            </dd>

            <dt class="text-center text-white">
                @Html.DisplayNameFor(model => model.Picture_Url)
            </dt>

            <dd class="text-center ">
                <img src="@Model.Picture_Url" style="max-height: 300px;" class="shadow-lg mb-5" />
                @Html.HiddenFor(model => model.Picture_Url)
            </dd>

        </dl>


        <div class="form-actions no-color text-center">
            <input type="submit" value="Radera vara" class="btn btn-danger text-center mr-4" /> 
            @Html.ActionLink("Tillbaka", "WebshopAdminList", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
