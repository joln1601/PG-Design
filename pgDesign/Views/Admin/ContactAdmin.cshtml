@model pgDesign.ViewModels.ContactVM
@{
    ViewBag.Title = "ContactAdmin";
}


<div id="KontaktInfoDiv">
    <h2>Redigera innehåll i kontaktsidan</h2>
    @for (var i = 0; i < Model.Users.Count(); i++)

    {

        using (Html.BeginForm("SetContactAdmin", "Admin"))

    {
    <table class="mb-3 contactTable">
        @Html.HiddenFor(m => Model.Users.ElementAt(i).Id)
        <tr>
            <td>
                <div id="Fname" class="mr-5">
                    <strong>@Html.Label("Förnamn")</strong>
                    @Html.TextBoxFor(m => Model.Users.ElementAt(i).Fname, new { @style = "margin-right:20px;", @class = "form-control" })
                </div>
            </td>
            <td>
                <div id="Lname">
                    <strong>@Html.Label("Efternamn")</strong>
                    @Html.TextBoxFor(m => Model.Users.ElementAt(i).LName, new { @style = "margin-right:20px;", @class = "form-control" })
                </div>
            </td>
        </tr>
        <tr>

            <td>
                <div id="Email" class="mr-5 mt-3">
                    <strong>@Html.Label("E-post")</strong>
                    @Html.TextBoxFor(m => Model.Users.ElementAt(i).Email, new { @style = "margin-right:20px;", @class = "form-control" })
                </div>
            </td>
            <td>
                <div id="phone" class="mt-3">
                    <strong>@Html.Label("Telefon")</strong>
                    @Html.TextBoxFor(m => Model.Users.ElementAt(i).Phone, new { @style = "margin-right:20px;", @class = "form-control" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="mt-3 mb-3">
                    <strong> @Html.Label("Biografi")</strong>
                    @Html.TextAreaFor(m => Model.Users.ElementAt(i).Biography, new { @style = "margin-right:20px; width: 300%;", @rows = "6", @class = "form-control" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="mt-3 mb-3">
                    <strong>@Html.Label("Kontakta oss")</strong>
                    @Html.TextAreaFor(m => Model.Users.ElementAt(i).ContactUs, new { @style = "margin-right:20px; width: 300%;", @rows = "4", @class = "form-control" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
               

                
            </td>
        </tr>
    </table>
    <div>
                <input type="submit" value="Spara" class="form-control btn-primary float-right" style="width: 130px; margin-right: 230px;" />

    </div>
}
        <br />
    }
    
@if (TempData["Message"] != null)
{
    <div class="col-md-12" style="color: red;">

    @Html.Raw(@TempData["Message"])
    </div>
}
</div>





