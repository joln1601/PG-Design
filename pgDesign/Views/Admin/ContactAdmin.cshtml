@model pgDesign.ViewModels.ContactVM
@{
    ViewBag.Title = "ContactAdmin";
}


<div id="KontaktInfoDiv">
    <h2>Redigera innehåll i kontaktsidan</h2>
    @using (Html.BeginForm("SetContactAdmin", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table class="mb-3 contactTable">
            <tr>
                <td>
                    <div id="Fname" class="mr-5">
                        <strong>@Html.Label("Förnamn")</strong>
                        @Html.TextBoxFor(m => Model.Fname, new { @style = "margin-right:20px;", @class = "form-control" })
                    </div>
                </td>
                <td>
                    <div id="Lname">
                        <strong>@Html.Label("Efternamn")</strong>
                        @Html.TextBoxFor(m => Model.LName, new { @style = "margin-right:20px;", @class = "form-control" })
                    </div>
                </td>
                <td>
                    <div id="profile_pic">
                        <img src="@Model.Picture_Url" class="profile-pic" id="profile" style="max-width: 300px;" />

                        @Html.HiddenFor(model => model.ContainerName, new { @Value = "profile", name = "ContainerName" })
                        <fieldset class="form-horizontal">
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="new_Btn col-md-8 btn btn-primary center">
                                        Ändra profilbild
                                    </div>
                                    <input type="file" name="photo" id="html_btn" />
                                </div>
                            </div>
                        </fieldset>

                    </div>
                </td>
            </tr>
            <tr>

                <td>
                    <div id="Email" class="mr-5 mt-3">
                        <strong>@Html.Label("E-post")</strong>
                        @Html.TextBoxFor(m => Model.Email, new { @style = "margin-right:20px;", @class = "form-control" })
                    </div>
                </td>
                <td>
                    <div id="phone" class="mt-3">
                        <strong>@Html.Label("Telefon")</strong>
                        @Html.TextBoxFor(m => Model.Phone, new { @style = "margin-right:20px;", @class = "form-control" })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="mt-3 mb-3">
                        <strong> @Html.Label("Biografi")</strong>
                        @Html.TextAreaFor(m => Model.Biography, new { @style = "margin-right:20px; width: 300%;", @rows = "6", @class = "form-control" })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="mt-3 mb-3">
                        <strong>@Html.Label("Kontakta oss")</strong>
                        @Html.TextAreaFor(m => Model.ContactUs, new { @style = "margin-right:20px; width: 300%;", @rows = "4", @class = "form-control" })
                    </div>
                </td>
            </tr>
            <tr>
                <td></td>
            </tr>
        </table>
        <div>
            <input type="submit" value="Spara" class="form-control btn-primary float-right" style="width: 130px; margin-right: 230px;" />

        </div>
    }
    <br />

    @if (TempData["Message"] != null)
    {
        <div class="col-md-12" style="color: red;">

            @Html.Raw(@TempData["Message"])
        </div>
    }
</div>

<script type="text/javascript">
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#profile').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#html_btn").change(function () {
        readURL(this);
    });
</script>

<script>
    $('.new_Btn').bind("click", function () {
        $('#html_btn').click();
    });
</script>