@model pgDesign.ViewModels.StartUpViewModel
@{
    ViewBag.Title = "Index";
}


<div id="carouselcollection" class="row">

    @foreach (var item in Model.gvm.BlobList)
    {
        using (Html.BeginForm("ChangeCarPics", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="card border-primary mb-3 mr-3 ml-3" style="max-width: 20rem;">
                <div class="card-header bg-dark text-white">Karuselbild @item.Id</div>
                <div class="card-body">
                    <fieldset class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="file" name="photo" />
                                <input type="hidden" value="@item.Id" name="id" />
                                <input type="submit" />
                            </div>
                        </div>
                    </fieldset>
                    <img src="@item.URIName" name="uri" value="@item.URIName" class="card-text" id="profile" style="max-width: 100%;" />
                </div>
            </div>
        }
    }
</div>



<div class="row">
    <div class="col-md-6">
        <h2 class="text-center" style="color:#000">PG Design Admindel</h2>
        <hr style="color:#000" />
        <br />

        <div id="OmOssDivAdmin" class="p-3">
            @using (Html.BeginForm("AboutText", "Admin"))
            {
                @Html.HiddenFor(m => m.Id)
                @Html.TextAreaFor(m => m.AboutText, new { @class = "form-control", @style = "margin-top: 0px; margin-bottom: 0px; min-height: 300px;" })
                <input type="submit" value="Spara" class="form-control btn-success mt-2 w-25 mr-0 float-right" />
            }
        </div>




    </div>
    <div class="col-md-6">
        <h2 class="text-center" style="color:#000">Nyheter</h2>
        <hr style="color:#000" />
        <br />
        <div class="fb-page" data-href="https://www.facebook.com/PG-Design-AB-968888989852243/" data-tabs="timeline" data-width="500" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="false"><blockquote cite="https://www.facebook.com/PG-Design-AB-968888989852243/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/PG-Design-AB-968888989852243/">PG Design AB</a></blockquote></div>
    </div>

</div>


