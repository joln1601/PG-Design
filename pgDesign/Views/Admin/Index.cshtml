@model pgDesign.ViewModels.StartUpViewModel
@{
    ViewBag.Title = "PG Design AB - StartsidaAdmin";
}


<div id="carouselcollection" class="row">

    @foreach (var item in Model.gvm.BlobList)
    {
        using (Html.BeginForm("ChangeCarPics", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="card border-primary mb-3 mr-3 ml-3 caroStyle" style="max-width: 20rem;">
                <div class="card-header bg-dark text-white">Karuselbild @item.Id</div>
                <div class="card-body">
                    <fieldset class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="file" name="photo" />
                                <input type="hidden" value="@item.Id" name="id" />
                                <input type="submit" />
                            </div>
                        </div>
                    </fieldset>
                    <img src="@item.URIName" name="uri" value="@item.URIName" class="card-text" id="profile" style="max-width: 100%;" />
                </div>
            </div>
        }
    }
</div>



<div class="row">
    <div class="col-md-6">
        <h2 class="text-center CompanyHeadline" style="color:#000">Verksamhetsbeskrivning</h2>
        <hr style="color:#000" />
        <br />

        <div id="OmOssDivAdmin" class="p-3">
            @using (Html.BeginForm("AboutText", "Admin"))
            {
                @Html.HiddenFor(m => m.Id)
                @Html.TextAreaFor(m => m.AboutText, new { @class = "form-control", @style = "margin-top: 0px; margin-bottom: 0px; min-height: 300px;" })
                <input type="submit" value="Spara" class="form-control btn-success mt-2 w-25 mr-0 float-right" />
            }
        </div>




    </div>
    <div class="col-md-6">
        <h2 class="text-center CompanyHeadline" style="color:#000">Avvikande öppettider</h2>
        <hr style="color:#000" />
        <br />
        <div id="AvvikandeOppettiderDiv" class="p-3">

        @using (Html.BeginForm("NewOpenTimes", "Admin"))
         {
         
         @Html.TextAreaFor(m => m.OpenTimes, new { @class = "form-control", @style = "margin-top: 0px; margin-bottom: 0px; min-height: 300px;" })
        <input type="submit" value="Spara" class="form-control btn-success mt-2 w-25 mr-0 float-right" />
        }
        </div>
    </div>

</div>




