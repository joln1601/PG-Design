@model pgDesign.ViewModels.StartUpViewModel
@{
    ViewBag.Title = "Home Page";
    //Layout = "~/Views/Home/_IndexLayout.cshtml";
}
<div class="row">
    <div class="col-md-12 mb-3" id="CarouselId">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">

                @for (int i = 0; i < Model.gvm.BlobList.Count; i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" style="max-height: 580px; " src="@Model.gvm.BlobList.ElementAt(i).URIName" alt="First slide">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" style="max-height: 580px;" src="@Model.gvm.BlobList.ElementAt(i).URIName" alt="First slide">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h2 class="text-center" style="color:#000">PG Design</h2>
        <div  class="p-3">
            <p class="text-center" id="OmOssText">@Model.AboutText</p>
        </div>

    </div>
    <div class="col-md-6">
        <h2 class="text-center" style="color:#000">Följ oss på Facebook</h2>
        <br />
        <div class="fb-page" data-href="https://www.facebook.com/PG-Design-AB-968888989852243/" data-tabs="timeline" data-width="500" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="false"><blockquote cite="https://www.facebook.com/PG-Design-AB-968888989852243/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/PG-Design-AB-968888989852243/">PG Design AB</a></blockquote></div>
    </div>

</div>






<div id="fb-root"></div>
<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/sv_SE/sdk.js#xfbml=1&version=v2.12';
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
