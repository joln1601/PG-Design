
@{
    ViewBag.Title = "Hitta hit";
}
<h2>@ViewBag.Title.</h2>
<hr />
<div class="row">
    <div class="col-md-6">
    <iframe class="w-100" 
            height="450"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/search?key=AIzaSyCLzqgtUgI036tuRcLrE-OZXjjMvE8KfrM&q=Bjärtrå+110,+872+96+Bjärtrå" allowfullscreen></iframe>
    </div>

    <div class="col-md-6 m-auto text-center">

        <h4 class="mt-3" style="text-decoration: underline">Vägbeskrivning</h4>
        <p class="mt-2">Skriv in ditt postnummer och tryck "Hitta hit" för att få en vägbeskrivning till PG Design</p>
        <div>
            <form action="http://maps.google.com/maps" method="get" target="_blank">
                <input type="text" class="w-50" name="saddr" />
                <input type="hidden" name="daddr" value="Strinne 110 Bjärtrå, 87296 Kramfors" />
                <br />
                <input type="submit" class="align-self-center mt-2" value="Hitta hit" />
            </form>

        </div>
    </div>
</div>
