@model pgDesign.ViewModels.ContactVM
@{
    ViewBag.Title = "Contact";
}
<div class="profile-body">
    <h2 class="text-center mb-4">Kontakta oss</h2>
    
     
    <div class="justify-content-center border shadow-lg" style="background-color: #eaeaea;">
        <div style="background-color: #dbdbdb;">
        <div class="pt-2 col-md-8 center">
                <img src="@Model.Picture_Url" class="profile-pic center" style="max-width: 300px;" />
            </div>
            <h3 class="text-center mt-4 mb-4">@Model.Fname @Model.LName</h3>
        <hr />
        </div>
            <p class="w-75 text-center center mt-3">
                <strong style="text-decoration: underline">Biografi</strong> <br />
                @Model.Biography
            </p>
            <p class="w-75 center text-center mt-3">
                <strong class="w-50 mt-4" style="text-decoration: underline">Hur du kan kontakta oss</strong>
                <br />
                @Model.ContactUs
            </p>

            <ul class="w-75 center text-center list-unstyled">
                <li>
                    <strong> E-post:</strong> <a href="#" data-target="#myModal" data-toggle="modal"> @Model.Email</a>
                </li>
                <li class="mt-3">
                    <strong>Telefon: </strong> <a href="#">@Model.Phone</a>
                </li>
            </ul>

            <div class="links justify-content-center mt-5 mb-5">
                <hr class="col-md-6"/>
                <ul class="icon-list text-center">
                    <li>
                       <a style="cursor:pointer;" data-target="#myModal" data-toggle="modal"><i class="far fa-envelope"></i>@*<img title="E-post" src="~/Images/Contact/mail.png" style="width: 50px;" />*@</a>
                    </li>
                    <li>
                        <img title="Mobil" src="~/Images/Contact/phone.png" style="width: 50px;" />
                    </li>
                    <li>
                        <img title="Hitta oss" src="~/Images/Contact/navPin.png" style="width: 30px;" />
                    </li>
                </ul>
            </div>
        </div>
</div>


    <div class="modal" id="myModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="mt-2 text-center mb-3">Kontakta PG-Design</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @using (Html.BeginForm("SendMail", "Home"))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="Mail-body col-md-12">
                            <div class="Mail-content">

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email address</label>
                                    @*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" >*@
                                    @Html.TextBoxFor(model => model.Mail.Email, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "Fyll i din e-post" })
                                    <small id="emailHelp" class="form-text text-muted ml-2">Vi delar inte din e-post med någon annan.</small>
                                </div>
                                <div class="form-group mt-3">
                                    <label for="subject">Ämne</label>
                                    @*<input type="email" class="form-control" id="subject" aria-describedby="emailHelp" >*@
                                    @Html.TextBoxFor(model => model.Mail.Subject, new { @class = "form-control", @id = "subject", @placeholder = "Ämne" })

                                </div>
                                <div class="form-group mt-3">
                                    <label for="exampleTextarea">Meddelande</label>
                                    @*<textarea class="form-control" id="exampleTextarea"  style="margin-top: 0px; margin-bottom: 0px; height: 95px;" ></textarea>*@
                                    @Html.TextAreaFor(model => model.Mail.Content, new { @class = "form-control", @id = "exampleTextarea", @placeholder = "Meddelande", @rows = "4" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-success float-right" value="Skicka" />
                        <input type="button" class="btn btn-danger" data-dismiss="modal" value="Stäng" />
                    </div>
                }
            </div>
        </div>
    </div>
