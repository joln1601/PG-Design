                    <li><a class="type17">Besöksadress <br>123455, Sverige</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h4>Information</h4>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li>
                                @Html.ActionLink("Hitta hit", "FindUs", "Home", null, new { @class = "nav-link", title = "Hitta hit" })
                            </li>

                            <li>
                                @Html.ActionLink("Om oss", "About", "Home", null, new { @class = "nav-link", title = "Om oss" })
                            </li>

                        </ul>
                    </div>

                </div>


            </div>
            <div class="col-md-4 social-media-links text-white">
                <h4>Följ oss</h4>
                <hr />
                <div class="col-md-12">

                    @*<a id="facebook" href="https://www.facebook.com/PG-Design-AB-968888989852243/" target="_blank" title="Facebook"><i class="fab fa-facebook-square fa-2x" aria-hidden="true"</i><img src="~/Images/Logos/facobookLogo.png" title="facebooklogo" /></a>*@
