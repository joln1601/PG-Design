            </div>
            <div class="col-md-4">
                <h4>Information</h4>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li>
                                @Html.ActionLink("Referenser", "Index", "Referenser", null, new { @class = "nav-link", title = "Referenser" })
                            </li>
                            <li>
                                @*@Html.ActionLink("Öpettider test", "_Opentimes", "Home")*@
