@model pgDesign.ViewModels.WebshopVM
@{
    ViewBag.Title = "WebshopView";
}


<div>

    <div id="Webshopvaravy" class="shadow-lg border border-dark rounded">
        <div class="pt-3 row col-md-12">
            <div class="pl-2 col-md-6" style="margin-right: 50px;">
            <img src="@Model.Picture_Url" class="center img-thumbnail mt-3" style="max-height: 400px; margin-top: 50px;" />

            </div>
            <div class="text-center col-md-5">
            <div class="pt-5">
                <h2>@Model.Name</h2>
                <h3 class="">Pris: @Model.Price</h3>
            </div>
            <p class="center">
                @Model.Description
            </p>
           

            </div>
        </div>

        <hr />
        <div class="text-center row">
            <div id="webshopfooter" class="center col-md-12">
                <p class="w-75 center text-center mt-3">
                    <strong class="w-50 mt-4" style="text-decoration: underline">Hur du kan kontakta oss om du är intresserad av varan.</strong>
                    <br />
                   
                </p>

                <ul class="w-75 center text-center list-unstyled">
                    <li>
                        <strong> E-post:</strong> <a href="#"> @Model.Cvm.Email</a>
                    </li>
                    <li class="mt-3">
                        <strong>Telefon: </strong> <a href="#">@Model.Cvm.Phone</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
