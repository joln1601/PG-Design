@model pgDesign.ViewModels.WebshopVM
@{
    ViewBag.Title = "WebshopView";
}


<div>
    <div>
        <div>
            <img src="@Model.Picture_Url" class="center" style="max-height: 400px; margin-top: 50px;" />
        </div>
        <div class="text-center">
            <div class="d-inline">
                <h2>@Model.Name</h2>
                <h3 class="">Pris: @Model.Price</h3>
            </div>
            <p class="col-md-8 center">
                @Model.Description
            </p>
            <hr />
            <div id="webshopfooter">
                <p class="w-75 center text-center mt-3">
                    <strong class="w-50 mt-4" style="text-decoration: underline">Hur du kan kontakta oss</strong>
                    <br />
                    @Model.Cvm.ContactUs
                </p>

                <ul class="w-75 center text-center list-unstyled">
                    <li>
                        <strong> E-post:</strong> <a href="#"> @Model.Cvm.Email</a>
                    </li>
                    <li class="mt-3">
                        <strong>Telefon: </strong> <a href="#">@Model.Cvm.Phone</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>